rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Los usuarios pueden leer y escribir su propio documento.
    // Nadie más puede leer los datos de otros usuarios (a menos que sea admin).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Un usuario nuevo puede crear su propio documento.
      allow create: if request.auth != null;
    }

    // Dejamos la colección de turnos abierta por ahora para desarrollo.
    // Más adelante la aseguraremos.
    match /turnos/{turnoId} {
      allow read, write: if true; 
    }

    // Regla de ejemplo para la galería de adopción (lectura pública)
    match /pets/{petId} {
        allow read: if true;
        // Solo un admin puede añadir o cambiar mascotas
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}